<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="3"
    tools:context="com.scrambler.kevin.myfirstproject.MyActivity">


<!--    <EditText
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:hint="@string/edit_message" />-->
    <LinearLayout
        android:id="@+id/Layer_Left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="10">


        <ImageButton
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label0"
            android:onClick="click0"
            />
            %android:background="@drawable/rsz_dotalogo1"
        <ImageButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label1"
            android:onClick="click3"
            />
            %android:background="@drawable/rsz_dotalogo4"

        <!--
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"-->
        <ImageButton
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label2"
            android:onClick="click6"
            />
            %android:background="@drawable/rsz_dotalogo7"
        <Button
            android:id="@+id/button_settings"

            android:layout_width="125dp"
            android:layout_height="50dp"
            android:text="@string/action_random"
            android:onClick="clicksettings1"
            />

    </LinearLayout>
    <!-- FOR BUTTON android:layout_toRightOf="@id/edit_message"-->

    <LinearLayout
        android:id="@+id/Layer_Middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="10">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label3"
            android:onClick="click1"
            />
            %android:background="@drawable/rsz_dotalogo2"
        <ImageButton
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label4"
            android:onClick="click4"
            />
            %android:background="@drawable/rsz_dotalogo5"
        <ImageButton
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label5"
            android:onClick="click7"
            />
            %android:background="@drawable/greyback"
        <Button
            android:id="@+id/button_settings2"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:text="@string/action_secret"
            android:onClick="clicksettings2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layer_Right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="10">
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label6"
            android:onClick="click2"
            />
            %android:background="@drawable/rsz_dotalogo3"
        <ImageButton
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label7"
            android:onClick="click5"
            />
            %android:background="@drawable/rsz_dotalogo6"
        <ImageButton
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="@string/button_label8"
            android:onClick="click8"
            />
            %android:background="@drawable/rsz_dotalogo8"
        <Button
            android:id="@+id/button_settings3"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:text="@string/action_back"
            android:onClick="clicksettings3"
        />
    </LinearLayout>



</LinearLayout>
