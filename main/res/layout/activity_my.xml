<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:weightSum="3"
    tools:context="com.scrambler.kevin.myfirstproject.MyActivity">


<!--    <EditText
        android:id="@+id/edit_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:hint="@string/edit_message" />-->
    <LinearLayout
        android:id="@+id/Layer_Left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="12">


        <ImageButton
            android:id="@+id/button0"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click0"
            android:layout_weight="3"
            />
        <ImageButton
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click3"
            android:layout_weight="3"
            />

        <ImageButton
            android:id="@+id/button6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click6"
            android:layout_weight="3"
            />
        <Button
            android:id="@+id/button_settings"

            android:layout_width="125dp"
            android:layout_height="0dp"
            android:text="@string/action_random"
            android:onClick="clicksettings1"
            android:layout_weight="2"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layer_Middle"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="12">

        <ImageButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click1"
            android:layout_weight="3"
            />
        <ImageButton
            android:id="@+id/button4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click4"
            android:layout_weight="3"
            />
        <ImageButton
            android:id="@+id/button7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click7"
            android:layout_weight="3"
            />
        <Button
            android:id="@+id/button_settings2"
            android:layout_width="125dp"
            android:layout_height="0dp"
            android:text="@string/action_secret"
            android:onClick="clicksettings2"
            android:layout_weight="2"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layer_Right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="12">
        <ImageButton
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/button_label6"
            android:onClick="click2"
            android:layout_weight="3"
            />
        <ImageButton
            android:id="@+id/button5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click5"
            android:layout_weight="3"
            />
        <ImageButton
            android:id="@+id/button8"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="click8"
            android:layout_weight="3"
            />
        <Button
            android:id="@+id/button_settings3"
            android:layout_width="125dp"
            android:layout_height="0dp"
            android:text="@string/action_back"
            android:onClick="clicksettings3"
            android:layout_weight="2"
        />
    </LinearLayout>



</LinearLayout>
